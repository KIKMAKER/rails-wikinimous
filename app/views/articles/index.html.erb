  <div class="d-flex">
    <div class="row m-2 p-2">
    <% @articles.each do |article| %>
      <div class="col md-4">
        <div class="card m-2 p-2 h-100" style="background-color: #eee;">
          <div class="card-title">
            <h2><%= link_to article.title, article_path(article), class: "fs-3"%></h2>
          </div>
          <div class="card-body">
            <p class="card-text"><%= article.content %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
